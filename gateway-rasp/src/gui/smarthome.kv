#: import hex kivy.utils.get_color_from_hex
#:import images_path kivymd.images_path

<ControlPanel>:
    canvas:
        Color:
            rgba: hex('#fff')
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        spacing: dp(10)
        padding: dp(20)
        orientation: 'vertical'

        MDLabel:
            text: 'SMART HOME'
            font_style: "H1"
            font_color: 1, 0, 0, 1
            halign: "center"


        MDGridLayout:
            cols: 2
            spacing: 10

            MDFillRoundFlatIconButton:
                icon: "sofa"
                text: "Living room"
                on_press: root.showRoomPanel()

            MDFillRoundFlatIconButton:
                icon: "fridge"
                text: "Kitchen"
                on_press: root.showRoomPanel()

            MDFillRoundFlatIconButton:
                icon: "bed"
                text: "Bedroom"
                on_press: root.showRoomPanel()

        MDGridLayout:
            cols: 3
            spacing: 10

            MDLabel:
                text: root.currentTime
                font_style: "H5"
                font_color: 1, 0, 0, 1

            MDLabel:
                text: 'LEVEL 0'
                font_style: "H5"
                font_color: 1, 0, 0, 1

            MDIconButton:
                icon: root.home_status
                user_font_size : "48sp"
                on_press: root.toggle_lookout()

<RoomPanel>:
    canvas:
        Color:
            rgba: hex('#6699CC')
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"

        MDGridLayout:
            cols: 2
            spacing: dp(5)
            MDLabel:
                text: 'LIVING ROOM'
                font_style: "H4"
                font_color: 1, 0, 0, 1
                halign: "center"

            MDFillRoundFlatIconButton:
                icon: "view-dashboard"
                text: "Back"
                on_press: root.showControlPanel()



        MDGridLayout:
            cols: 2
            spacing: dp(5)

            Label:
                text: 'Light'
                size: self.texture_size

            MDFillRoundFlatIconButton:
                icon: "lightbulb"
                text: "Primary"

            Label:
                text: 'Temperature:'
                size: self.texture_size

            MDFillRoundFlatIconButton:
                icon: "thermometer"
                text: "Primary"

            Label:
                text: 'Movement:'
                size: self.texture_size

            MDFillRoundFlatIconButton:
                icon: "motion-sensor"
                text: "Primary"

        AnchorLayout:
            anchor_x: "right"
            MDFillRoundFlatIconButton:
                icon: "cctv"
                text: "Cam"










