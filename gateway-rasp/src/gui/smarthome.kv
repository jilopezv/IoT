#: import hex kivy.utils.get_color_from_hex
#:import images_path kivymd.images_path

<ControlPanel>:
    canvas:
        Color:
            rgba: hex('#fff')

    BoxLayout:
        spacing: dp(10)
        padding: dp(20)
        orientation: 'vertical'

        MDLabel:
            text: 'SMART HOME'
            font_style: "H1"
            font_color: 1, 0, 0, 1
            halign: "center"

        MDGridLayout:
            cols: 2
            spacing: dp(5)

            MDFillRoundFlatIconButton:
                icon: "sofa"
                text: "Living Room"
                icon_size: "60dp"
                font_size: "40dp"
            	width: self.parent.width/2
                on_press: root.showRoomPanel()

            MDFillRoundFlatIconButton:
                icon: "fridge"
                text: "Kitchen"
                icon_size: "60dp"
                font_size: "40dp"
                width: self.parent.width/2
                on_press: root.showRoomPanel()

            MDFillRoundFlatIconButton:
                icon: "bed"
                text: "Bedroom"
                icon_size: "60dp"
                font_size: "40dp"
                width: self.parent.width/2
                on_press: root.showRoomPanel()

        MDGridLayout:
            cols: 3
            spacing: 10

            MDLabel:
                text: root.currentTime
                font_style: "H5"
                font_color: 1, 0, 0, 1

            MDLabel:
                text: 'LEVEL 0'
                font_style: "H5"
                font_color: 1, 0, 0, 1

            MDIconButton:
                icon: root.home_status
                icon_size: "60dp"
                on_press: root.toggle_lookout()

<RoomPanel>:
    canvas:
        Color:
            rgba: hex('#fff')
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        spacing: 20
        orientation: "vertical"

        MDTopAppBar:
            title: "Living Room"
            left_action_items: [["sofa"]]
            right_action_items: [["home", lambda x: root.show_control_panel()]]

        MDBoxLayout:
            orientation: "horizontal"
            spacing: dp(50)
            padding: dp(90)

            MDLabel:
                text: 'Light:'
                font_color: 1, 0, 0, 1
                size: self.texture_size


            MDFillRoundFlatIconButton:
                icon: "lightbulb"
                text: "Primary"
                icon_color: root.light_color
                on_press: root.toggle_light()

            MDLabel:
                text: 'Temperature:'
                font_color: 1, 0, 0, 1
                size: self.texture_size

            MDFillRoundFlatIconButton:
                icon: "thermometer"
                text: root.tmp_value

            MDLabel:
                text: 'Movement:'
                font_color: 1, 0, 0, 1
                size: self.texture_size

            MDFillRoundFlatIconButton:
                icon: root.mov_icon
                text: root.mov_text

        AnchorLayout:
            anchor_x: "right"
            padding: dp(60)

            MDFillRoundFlatIconButton:
                icon: "cctv"
                text: "Cam"
                on_press: root.toggle_camera()

